{% extends 'base.html.twig' %}

{% block title %}Materiel index
{% endblock %}

{% block body %}
	<div class="px-6 lg:px-8 py-5">
		<div class="sm:flex sm:items-center">
			<div class="sm:flex-auto">
				<h1 class="text-xl font-semibold text-gray-900">Materiel index</h1>
			</div>
			<div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
				<a href="{{ path('app_materiel_new') }}" class="block rounded-md bg-indigo-600 py-1.5 px-3 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter un élément</a>
			</div>
		</div>
		<div class="mt-8 flow-root">
			<div class="-my-2 -mx-6 overflow-x-auto lg:-mx-8">
				<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
					<table class="min-w-full divide-y divide-gray-300">
						<thead>
							<tr>
								<th scope="col" class="py-3.5 pl-6 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Id</th>
								<th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Nom</th>
								<th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Nombre total</th>
								<th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">En stock</th>
								<th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">En Pret</th>
								<th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Actions</th>
							</tr>
						</thead>
						<tbody class="divide-y divide-gray-200">
							{% for materiel in materiels %}
								<tr>
									<td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm font-medium text-gray-900 sm:pl-0">{{ materiel.id }}</td>
									<td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ materiel.nom }}</td>
									<td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ materiel.nombreTotal }}</td>
									<td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ materiel.enStock }}</td>
									<td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ materiel.enPret }}</td>
									<td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-sm font-medium sm:pr-0">
										<a href="{{ path('app_materiel_show', {'id': materiel.id}) }}" class="text-indigo-600 hover:text-indigo-900">Show</a>
										<a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
